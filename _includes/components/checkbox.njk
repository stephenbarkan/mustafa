{# Nested Components ------------------------------------------------------------------------------------------------------------------- #}

{% from "components/_fieldParts.njk" import fieldLabel, fieldDescription, directionStyles, fieldStyles, fieldsetOptionStyles, fieldsetInputStyles, fieldsetOptionLabelStyles %}
{% from "snippets/loopAttrs.njk" import loopAttrs %}

{# Macro ------------------------------------------------------------------------------------------------------------------------------- #}

{% macro checkbox(props={}, attrs={}) %}

{# Values ----------- #}


{# ------------------ #}

    <fieldset
        name="{{ props.name }}"
        class="{{ attrs.class }}"
        {{ loopAttrs(attrs) }}
    >
        <div class="{{ directionStyles["column"] }}">

            {% if props.label %}{{ fieldLabel({tag: "legend", fieldProps:props}) }}{% endif %}
            {% if props.description %}{{ fieldDescription(props) }}{% endif %}

            {% for option in props.options %}
                {# {% set inputData = { index: loop.index, value: option.value } %}
                {{ inputData | dump }} #}
                <div
                    x-data="{
                        data: {index: {{ loop.index}}, value: '{{ option.value }}' },
                        id: $id('{{ option.value }}'),
                        setChecked () {
                            const arr = {{ props.name }} {# the array is handled by the alpine state in form #}
                            return arr.includes(this.data) ? arr.splice(arr.indexOf(this.data), 1) : arr.push(this.data)
                        }
                    }"
                    class="flex {{ fieldsetOptionStyles }}">
                    <input
                        :checked="{{ props.name }}.includes(data)"
                        x-on:change="setChecked"
                        :id="id"
                        type="checkbox"
                        name="{{ props.name }}"
                        value="{{ option.value }}"
                        {{ loopAttrs(props.fieldAttrs) }}
                        class="{{ fieldsetInputStyles }} shrink-0"/>
                    <label class="{{ fieldsetOptionLabelStyles }}" :for="id">{{ option.label }}</label>
                </div>
            {% endfor %}
        </div>
    </fieldset>

{% endmacro %}

