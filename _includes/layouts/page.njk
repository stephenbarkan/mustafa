{% extends "layouts/base.njk" %}

{# Nested Components ------------------------------------------------------------------------------------------------------------------- #}

{% from "components/button.njk" import button %}
{% from "components/container.njk" import container %}
{% from "components/textLockup.njk" import textLockup %}
{% from "components/divider.njk" import divider %}

{# Values ------------------------------------------------------------------------------------------------------------------------------ #}

{% set showBottomLine = true %}
{% set showNavbar = true %}

{% set title = data.title %}
{% set elaboration = data.elaboration %}
{% set body = data.body %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}

{% block content %}
    {% call container({size: "content", type: "cols-1"}, {class:"px-site-inline-2"}) %}
        {{ textLockup({
            title: title,
            elaboration: elaboration,
            button: button
        }) }}
    {% endcall %}

    {% if showDivider %}
        {{ divider({},{class:""}) }}
    {% endif %}

    {% block pageContent %}{% endblock %}

{% endblock %}
