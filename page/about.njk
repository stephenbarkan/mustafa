{% extends "layouts/pageTwoColumn.njk" %}

{# Nested Components ------------------------------------------------------------------------------------------------------------------- #}

{% from "components/markdown.njk" import markdown %}
{% from "components/carousel.njk" import carousel %}
{% from "components/figure.njk" import figure %}
{% from "assets.njk" import logo, sparkle, blobOffering %}

{# Values ------------------------------------------------------------------------------------------------------------------------------ #}

{% set data = aboutPage %}
{% set colReverse = true %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}

{% block panelContent %}
    <div class="grid max-h-full gap-12">
        {% for item in data.figures %}
            {{ figure(props={image:item.image, alt: item.alt, focus: item.focus, aspect: item.aspect, caption: item.caption}) }}
        {% endfor %}
    </div>
{% endblock %}

{% block blobs %}
    {{ blobOffering({class:"hidden xl:block top-0 left-0 rotate-180 bottom-0 h-dvh fixed"}) }}
    {{ blobDefaultTop({class:"xl:hidden top-0 h-[25vh] w-full left-1/2 -translate-x-1/2"}) }}
    {{ blobDefaultBottom({class:"xl:hidden bottom-0 h-[25vh] w-full left-1/2 -translate-x-1/2"}) }}
{% endblock %}
