{% extends "layouts/base.njk" %}

{# Nested Components ------------------------------------------------------------------------------------------------------------------- #}

{% from "components/button.njk" import button %}
{% from "components/container.njk" import container %}
{% from "components/textLockup.njk" import textLockup %}
{% from "components/divider.njk" import divider %}
{% from "components/section.njk" import section %}

{# Values ------------------------------------------------------------------------------------------------------------------------------ #}

{% set showBottomLine = true %}
{% set showNavbar = true %}
{% set title = data.title %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}

{% block content %}
    {# page title #}
    {% call section({padding: "site"}, {class:"py-site-block"}) %}
        {% call container({size: "content", type: "cols-1"}) %}
            {{ textLockup({
                title: data.title,
                elaboration: data.elaboration,
                button: data.button
            }) }}
        {% endcall %}
    {% endcall %}

    {% if showDivider %}
        {{ divider({},{class:""}) }}
    {% endif %}

    {% block pageContent %}{% endblock %}

{% endblock %}
